<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShowVehicle">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="300dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#770000ff"
        android:gravity="start"
        app:title="Vehiculos"
        app:titleTextColor="@color/colorAccent"
        app:logo="@drawable/car"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        popupTheme="@style/ThemeOverlay.AppCompat.Light" >

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/my_toolbar">
        <TextView
            android:id="@+id/alert_of_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="seleccione y edite!"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:background="@color/text_of_alert" />
    </LinearLayout>


    <ImageButton
        android:layout_width="84dp"
        android:layout_height="54dp"
        android:layout_toRightOf="@+id/my_toolbar"
        android:background="#770000ff"
        android:src="@drawable/home"
        android:onClick="returToHome"/>
            <TextView
                android:id="@+id/plaque_t"
                android:layout_width="@dimen/edit_text_dimentios"
                android:layout_height="wrap_content"
                android:text="@string/plaque"
                android:textSize="@dimen/text_size2"
                android:layout_alignParentTop="false"
                android:layout_marginTop="170dp"/>
    <TextView
        android:id="@+id/plaque"
        android:layout_width="@dimen/edit_text_dimentios"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:layout_alignParentTop="false"
        android:background="@drawable/contour_of_textv"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="@dimen/margin_left_first_et"/>
            <TextView
                android:id="@+id/brand_t"
                android:layout_width="@dimen/edit_text_dimentios"
                android:layout_height="wrap_content"
                android:text="@string/brand"
                android:textSize="@dimen/text_size2"
                android:layout_below="@+id/plaque_t"
                android:layout_marginTop="@dimen/margin_text"/>
    <EditText
        android:id="@+id/brand"
        android:layout_width="@dimen/edit_text_dimentios"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:background="@drawable/contour_of_textv"
        android:layout_below="@+id/plaque"
        android:layout_marginLeft="@dimen/margin_left_first_et"/>
            <TextView
                android:id="@+id/model_t"
                android:layout_width="@dimen/edit_text_dimentios"
                android:layout_height="wrap_content"
                android:text="@string/model"
                android:textSize="@dimen/text_size2"
                android:layout_below="@+id/brand_t"
                android:layout_marginTop="@dimen/margin_text"/>
    <EditText
        android:id="@+id/model"
        android:layout_width="@dimen/edit_text_dimentios"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:background="@drawable/contour_of_textv"
        android:layout_below="@+id/brand"
        android:layout_marginLeft="@dimen/margin_left_first_et"/>
            <TextView
                android:id="@+id/num_of_doors_t"
                android:layout_width="@dimen/edit_text_dimentios"
                android:layout_height="wrap_content"
                android:text="puertas"
                android:layout_below="@+id/model_t"
                android:layout_marginTop="@dimen/margin_text"/>
    <EditText
        android:id="@+id/num_of_doors"
        android:layout_width="@dimen/edit_text_dimentios"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:background="@drawable/contour_of_textv"
        android:layout_below="@+id/model"
        android:layout_marginLeft="@dimen/margin_left_first_et"/>
            <TextView
                android:id="@+id/type_of_vehicle_t"
                android:layout_width="@dimen/edit_text_dimentios"
                android:layout_height="wrap_content"
                android:text="@string/type_of_vehicle"
                android:textSize="@dimen/text_size2"
                android:layout_below="@+id/num_of_doors_t"
                android:layout_marginTop="@dimen/margin_text"/>
    <EditText
        android:id="@+id/type_of_vehicle"
        android:layout_width="@dimen/edit_text_dimentios"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:background="@drawable/contour_of_textv"
        android:layout_below="@+id/num_of_doors"
        android:layout_marginLeft="@dimen/margin_left_first_et"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="60dp"
                android:layout_below="@+id/type_of_vehicle">
                    <Button
                        android:id="@+id/update_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actualizar"
                        android:onClick="updateVehicle"
                        android:padding="5dp"
                        android:background="@drawable/contour_of_textv" />
            </LinearLayout>

</RelativeLayout>