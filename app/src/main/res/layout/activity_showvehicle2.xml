<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableRow
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:text="@string/plaque"
                tools:ignore="MissingConstraints"
                android:textSize="18dp"
                android:textColor="@color/text_outline"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/plaque"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textSize="18dp"
                android:background="@drawable/contour_of_textv"
                android:layout_weight="2"/>
        </TableRow>

        <TableRow
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:text="@string/brand"
                tools:ignore="MissingConstraints"
                android:textSize="18dp"
                android:textColor="@color/text_outline"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textSize="18dp"
                android:background="@drawable/contour_of_textv"
                android:layout_weight="2"/>
        </TableRow>

        <TableRow
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:text="@string/model"
                tools:ignore="MissingConstraints"
                android:textSize="18dp"
                android:textColor="@color/text_outline"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textSize="18dp"
                android:background="@drawable/contour_of_textv"
                android:layout_weight="2"/>
        </TableRow>

        <TableRow
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:text="@string/number_of_doors"
                tools:ignore="MissingConstraints"
                android:textSize="18dp"
                android:textColor="@color/text_outline"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/num_of_doors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textSize="18dp"
                android:background="@drawable/contour_of_textv"
                android:layout_weight="2"/>
        </TableRow>

        <TableRow
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:text="@string/type_of_vehicle"
                tools:ignore="MissingConstraints"
                android:textSize="18dp"
                android:textColor="@color/text_outline"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/type_of_vehicle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textSize="18dp"
                android:background="@drawable/contour_of_textv"
                android:layout_weight="2"/>
        </TableRow>

        <TableRow
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:text="Mas caracteristicas"
                android:textSize="18dp"
                android:textColor="@color/text_outline"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_arrow_forward"
                android:layout_gravity="center_vertical"
                android:background="@drawable/contour_of_textv"
                android:onClick="additionalFeatures"
                android:layout_weight="2"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:weightSum="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_update"
                android:onClick="updateVehicle"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_delete"
                android:onClick="deleteVehicle"
                android:layout_weight="1"/>
        </TableRow>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>